<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.gender %></td>
        <td><%= link_to 'Show', author,class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<span class="has-tooltip" data-toggle="tooltip" title="<%= "Back To Author" %>">
<%= link_to 'New Author', new_author_path %>


  </span>
